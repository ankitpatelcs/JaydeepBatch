
@{
    ViewBag.Title = "Index";
    var username = Request.Cookies["uname"] == null ? "" : Request.Cookies["uname"].Value;
    var password = Request.Cookies["pass"] == null ? "" : Request.Cookies["pass"].Value;
}
<script>
    function getCookies() {
        var txtun = document.getElementById("txtuname").value;
        if (txtun == "@username") {
            document.getElementById("txtpass").value = "@password";
        }
    }
</script>

<h2>Index</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Username</label>
            <input id="txtuname" name="txtuname" type="text" class="form-control" onchange="getCookies()" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <input id="txtpass" name="txtpass" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <input type="submit" class="btn btn-info" value="Submit" />
        </div>
    </div>
}