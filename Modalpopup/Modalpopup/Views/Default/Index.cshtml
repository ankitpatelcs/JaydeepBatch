@model IEnumerable<Modalpopup.EDM.tblemployee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function addEmp() {
        $.ajax({
            url: "/Default/Create",
            type: "GET",
            success: function (data) {
                $("#mybody").html(data);
                $("#myModal").modal('show');
            }
        });
    }

    function updateEmp(empid) {
        $.ajax({
            url: "/Default/Create/" + empid,
            type: "GET",
            success: function (data) {
                $("#mybody").html(data);
                $("#myModal").modal('show');
            }
        });
    }

</script>

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <button type="button" class="btn btn-info" onclick="addEmp()">Create</button>
</p>
